# Finance Tracker - Environment Variables Template
# Version: 1.0 | Milestone 1
# Copy this file to .env and update values for your environment

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password
POSTGRES_DB=finance_tracker
POSTGRES_PORT=5433

# =============================================================================
# MinIO Configuration (S3-compatible storage)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9002
MINIO_CONSOLE_PORT=9003
MINIO_BUCKET=finance-tracker-uploads

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=redis_password
REDIS_PORT=6380

# =============================================================================
# Backend Configuration
# =============================================================================
ENV=development
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s

# Database URL (constructed from PostgreSQL variables)
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable

# Redis URL (constructed from Redis variables)
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:${REDIS_PORT}/0

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# =============================================================================
# Email Service Configuration (Resend)
# =============================================================================
RESEND_API_KEY=re_RMhAGA9s_66ffbDM13uZ1NTs4oZn1cQ4p
RESEND_FROM_NAME="Finance Tracker"
RESEND_FROM_EMAIL=onboarding@resend.dev
APP_BASE_URL=http://localhost:3100

# Email Worker Configuration
EMAIL_WORKER_ENABLED=true
EMAIL_WORKER_POLL_INTERVAL=5s
