# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
FRONTEND_PORT=3100

# =============================================================================
# Docker Build Paths (relative to infra directory)
# =============================================================================
BACKEND_PATH=../backend
FRONTEND_PATH=../frontend
INFRA_PATH=../infra
BACKEND_PORT=8080
